{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "../src/lib/parser.ts",
    "../src/lib/interpolate.ts",
    "../src/lib/constants.ts",
    "../src/lib/launchers.ts",
    "../src/types/prompt.ts"
  ]
}
